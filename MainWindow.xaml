            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <TextBlock Text="{Binding Path=BPM}" FontSize="16" FontWeight="Normal" Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="0" Grid.RowSpan="2"></TextBlock>
        <Button Name="TempoPlus" Click="TempoPlus_Click" FontSize="12" FontWeight="Normal" Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="20">+</Button>
        <Button Name="TempoMinus" Click="TempoMinus_Click" FontSize="12" FontWeight="Normal" Grid.Column="9" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2">-</Button>
        <TextBlock Text="{Binding Path=TSNumerator}" FontSize="16" FontWeight="Normal" Grid.Column="11" Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="2"></TextBlock>
        <Button Name="TSNumeratorPlus" Click="TSNumeratorPlus_Click" FontSize="12" FontWeight="Normal" Grid.Column="15" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="20">+</Button>
        <Button Name="TSNumeratorMinus" Click="TSNumeratorMinus_Click" FontSize="12" FontWeight="Normal" Grid.Column="17" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="20">-</Button>

        <!-- Row 1 -->
        <TextBlock Text="{Binding Path=Pulse_Cnt}" FontSize="16" FontWeight="Normal" Grid.ColumnSpan="2" Grid.Column="0" Grid.RowSpan="2" Grid.Row="2"></TextBlock>
        <TextBlock Text="{Binding Path=TSDenominator}" FontSize="16" FontWeight="Normal" Grid.Column="11" Grid.ColumnSpan="4" Grid.Row="2" Grid.RowSpan="2"></TextBlock>
        <Button Name="TSDenominatorPlus" Click="TSDenominatorPlus_Click" FontSize="12" FontWeight="Normal" Grid.Column="15" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Right" Width="20">+</Button>
        <Button Name="TSDenominatorMinus" Click="TSDenominatorMinus_Click" FontSize="12" FontWeight="Normal" Grid.Column="17" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Right" Width="20">-</Button>
    </Grid>
</Window>
